// Lokasi: api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Pastikan URL database di file .env Anda sudah benar
  url      = env("DATABASE_URL")
}

// Model Utama: Mencatat detail perjalanan
model TravelLog {
  id          Int           @id @default(autoincrement())
  title       String        // Judul Catatan
  description String?       // Deskripsi (boleh kosong)
  latitude    Float         // Koordinat GPS
  longitude   Float         // Koordinat GPS
  visitedAt   DateTime      @default(now()) // Kapan dikunjungi
  createdAt   DateTime      @default(now()) // Kapan dicatat
  
  // Relasi: Satu catatan bisa punya banyak foto
  // Relasi: Satu catatan bisa punya banyak foto
  photos      TravelPhoto[] 
  
  // Perlu dijalankan 'npx prisma db push' jika ada perubahan disini 
}

// Model Foto: Menyimpan link gambar
model TravelPhoto {
  id          Int       @id @default(autoincrement())
  url         String    // Path/URL file gambar
  travelLogId Int
  
  // Menghubungkan foto ke TravelLog
  // onDelete: Cascade berarti jika Catatan dihapus, fotonya juga terhapus dari DB
  travelLog   TravelLog @relation(fields: [travelLogId], references: [id], onDelete: Cascade)
}